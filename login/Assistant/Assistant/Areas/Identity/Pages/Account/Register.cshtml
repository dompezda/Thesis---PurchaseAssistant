                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Gender"> Płeć </label><br />

                <label><input asp-for="Input.Gender" value="Male" type="radio" />Mężczyzna</label><br />
                <label><input asp-for="Input.Gender" value="Female" type="radio" />Kobieta</label><br />


            </div>
            <div class="form-group">
