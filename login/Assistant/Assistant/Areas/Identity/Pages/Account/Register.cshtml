                <label><input asp-for="Input.Salary" value="Ponizej 3000zl" type="radio" />Poniżej 3000zł</label><br />
                <label><input asp-for="Input.Salary" value="3000-5000zl" type="radio" />3000-5000zł</label><br />
                <label><input asp-for="Input.Salary" value="Powyzej 5000zl" type="radio" />Powyżej 5000zł</label><br />


