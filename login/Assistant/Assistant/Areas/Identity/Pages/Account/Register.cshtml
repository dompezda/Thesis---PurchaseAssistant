<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Gender"> Płeć </label><br />

                <label><input asp-for="Input.Gender" value="Male" type="radio" />Male</label><br />
                <label><input asp-for="Input.Gender" value="Female" type="radio" />Female</label><br />


            </div>
            <div class="form-group">
                <label asp-for="Input.Salary"> Zarobki </label><br />

                <label><input asp-for="Input.Salary" value="Poniżej 3000zł" type="radio" />Poniżej 3000zł</label><br />
                <label><input asp-for="Input.Salary" value="3000-5000zł" type="radio" />3000-5000zł</label><br />
                <label><input asp-for="Input.Salary" value="Powyżej 5000zł" type="radio" />Powyżej 5000zł</label><br />


            </div>
            <div class="form-group">
                <label asp-for="Input.Home"> Miejsce Zamieszkania </label><br />

                @Html.DropDownListFor(model => model.Input.Home, listItems, "Miejsce zamieszkania")


            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

