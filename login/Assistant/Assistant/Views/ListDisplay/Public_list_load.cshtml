@{
    ViewData["Title"] = "Wczytaj Liste";
}

<div class="row">
    <h4>Listy do wczytania</h4>


    <input type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Main_menu", "Home")'" value="Wroc" style="margin-bottom:3px; width:60px; margin-left:10%;" />
</div>
<div class="col-sm-10" >
    <div class="accordion" id="accordionExample" >
        @{int k = 0;}

        @foreach (var list in ViewBag.Lists)
        {
            <div class="card-header" id="headingOne_@k" >

                <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne_@k" aria-expanded="true" aria-controls="collapseOne">
                       
                                @list.Name

                </button>
            </div>
            <div class="row">

                <form asp-controller="Home" asp-action="DeleteList" method="post">
                    <input type="hidden" name="list.Id" value="@list.Id" />
                    <button class="btn btn-primary" style="margin-bottom:3px; width:100px; height:30px; margin-left:20px">Usuń</button>
                </form>
                

                <form asp-controller="Home" asp-action="ListToShop" method="post">
                    <input type="hidden" name="list.Id" value="@list.Id" />
                    <button class="btn btn-primary" style="margin-bottom:3px; width:100px;height:30px; margin-left:20px">Wybierz</button>
                </form>
            </div>





                <div class="card">
                    @foreach (var productList in list.ProductList)
                    {
                        <div id="collapseOne_@k" class="collapse" aria-labelledby="headingOne_@k" data-parent="#accordionExample">
                            <div class="card-body">

                                @productList.Product.Name

                            </div>
                        </div>
                    }
                </div>
                k++;
                }
        </div>
    </div>



