@model Assistant.Models.List
@{
    ViewData["Title"] = "List_name";
}
    <div class="row">
        <h4>Podaj Nazwe Listy</h4>

        <input type="button" class="btn-primary" onclick="location.href='@Url.Action("Main_menu", "Home")'" value="Wroc" style="margin-bottom:3px; width:60px; margin-left:37%;" />
    </div>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="Send_Name" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input asp-for="Name" class="form-control" id="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="row">
                        Lista prywatna
                        <input id="IsPrivate" type="checkbox" asp-for="UserId" name="IsPrivate" />

                    </div>
                 }
                </div>
               

            <div class="form-group">

                <button type="submit" class="btn-primary" style="margin-bottom:3px; width:200px; margin-left:20%;">Dalej</button>

            </div>
        </form>

    </div>
</div>
